@model List<PersonalBlog.Models.BlogPost>
@{
    ViewData["Title"] = "Home Page";
}

<div class="jumbotron">
    <h1>ASP.NET Core</h1>
    <p class="">Provider InMemory</p>
</div>
<div class="table-responsive">
    <table class="table table-hover">
        <tr>
            <th>Título</th>
            <th>ShortDescription</th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.Title
                </td>
                <td>
                    @item.ShortDescription
                </td>
            </tr>
        }

    </table>
</div>
